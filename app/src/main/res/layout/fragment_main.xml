<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment"
    android:background="@drawable/registration">
    <include
        android:id="@+id/toolbar"
        layout= "@layout/layout_bar"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_buttons_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_buttons_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_button2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_button1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_button1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_button2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />
    <Button
        android:id="@+id/button_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/register"
        app:layout_constraintTop_toBottomOf="@+id/top_buttons_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_buttons_guideline"
        app:layout_constraintEnd_toStartOf="@+id/vertical_button1_guideline"
        app:layout_constraintStart_toEndOf="@+id/start_button1_guideline"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/login"
        app:layout_constraintTop_toBottomOf="@+id/top_buttons_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_buttons_guideline"
        app:layout_constraintStart_toEndOf="@+id/vertical_button2_guideline"
        app:layout_constraintEnd_toStartOf="@+id/start_button2_guideline"/>

</androidx.constraintlayout.widget.ConstraintLayout>